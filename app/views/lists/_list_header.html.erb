<div class="ui relaxed divided list">
  <div class="item">
    <div class="content">
      <label for="list_name"><%= link_to list.name, list_path(list) %><br>
      <label for="due_date">Due: <%= list.due_date.strftime("%b %e, %Y") if list.due_date %></label><br><br>
    </div>
  </div>
  
  <div class="item">
    <div class="content">
      <label for="list_users">Users:</label><br>
        <% list.users.each do |user| %>
          <%= link_to user.username, user_path(user) %>
        <% end %>
    </div>
  </div>
</div>