<table>
  <thead>
    <tr>
      <th></th>
      <th>Content</th>
      <th>Assigned User</th>
      <th>Priority</th>
      <th>Due Date</th>
      <th>Categories</th>
    </tr>
  </thead>
  <tbody>
    <% list.items.each do |item| %>
      <tr>
        <td><%= button_to "Edit", edit_list_item_path(list, item), method: :get %></td>
        <td><%= item.content %></td>
        <td><%= item.assigned_user.username %></td>
        <td><%= item.priority %></td>
        <td><%= item.due_date.strftime("%b %e, %Y") if item.due_date %></td>
        <td><%= item.categories.map { |c| c.name }.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>