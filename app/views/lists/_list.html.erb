<label for="list_name"><%= link_to list.name, list_path(list) %> - due: <%= list.due_date %></label>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Assigned User</th>
      <th>Priority</th>
      <th>Due Date</th>
      <th>Categories</th>
    </tr>
  </thead>
  <tbody>
    <% list.items.each do |item| %>
      <tr>
        <td><%= item.content %></td>
        <td><%= item.assigned_user.username %></td>
        <td><%= item.priority %></td>
        <td><%= item.due_date %></td>
        <td><%= item.categories.map { |c| c.name }.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>