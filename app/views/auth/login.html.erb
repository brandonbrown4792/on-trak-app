<div class="ui middle aligned center aligned grid">
  <div style="max-width:40vw">
    <div class="ui container">
      <h2 class="ui green center aligned icon header">
        <i class="green user circle icon"></i>
        <div class="content">
          Log In
        </div>
      </h2>
      <div class="ui segment">
        <%= form_with url: '/verify', method: :post, class: "ui form" do |f| %>
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= f.text_field :'login[username]', placeholder: 'Username' %><br>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :'login[password]', placeholder: 'Password' %><br>
            </div>
          </div>

          <div class="field">
            <%= f.submit "Login", class: "ui green fluid button" %>
          </div>
        <% end %>
      </div>


      <div class="ui message">
        <div class="ui middle aligned center aligned grid">
          Not a member <a href="/signup">Sign Up</a>
        </div>
      </div>
    </div>
  </div>
</div>