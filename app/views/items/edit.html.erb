<%= form_with model: @item, url: "/lists/#{@item.list.id}/items/#{@item.id}", method: :patch do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <%= f.label :due_date %>
  <%= f.date_field :due_date, include_blank: true, default: nil %><br>

  <%= f.label :priority %>
  <%= f.select :priority, item_priorities %><br>

  <%= f.label :assigned_user %>
  <%= f.collection_select :assigned_user_id, @item.list.users, :id, :username %><br>

  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>

  <%= f.submit %>
<% end %>

<%= button_to "Cancel", list_path(@item.list), method: :get %>