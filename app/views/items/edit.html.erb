<% if flash[:errors] %>
  <ul style="color:red">
    <% flash[:errors].each do |message| %>
      <li><%= message %></li> 
    <% end %>
  </ul>
<% end %>

<%= form_with model: @item, url: "/lists/#{@item.list.id}/items/#{@item.id}", method: :patch do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <%= f.label :due_date %>
  <%= f.date_field :due_date %><br>

  <%= f.label :priority %>
  <%= f.select :priority, item_priorities %><br>

  <%= f.collection_select :assigned_user_id, @item.list.users, :id, :username %><br>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.submit %>
<% end %>

<%= button_to "Cancel", list_path(@item.list), method: :get %>